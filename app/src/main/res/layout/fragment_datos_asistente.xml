<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sea.co.cr.qrapp.Controller.Activities.DatosAsistente"
    android:background="@color/colorBack"
    android:id="@+id/fragmentDatosAsist">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <TextView
            android:text="Datos del asistente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textStyle="normal|bold"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <TextView
            android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNombre"
            android:textStyle="normal|bold"
            android:textColor="#FF6D00"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:text="Por definir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNombreDato"
            android:textStyle="normal|bold"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:text="Correo electrÃ³nico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCorreo"
            android:textStyle="normal|bold"
            android:textColor="#FF6D00"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:text="Por definir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCorreoDato"
            android:textStyle="normal|bold"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:text="Empresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmpresa"
            android:textStyle="normal|bold"
            android:textColor="#FF6D00"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:text="Por definir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmpresaDato"
            android:textStyle="normal|bold"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:text="Estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEstado"
            android:textStyle="normal|bold"
            android:textColor="#FF6D00"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:text="Por definir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEstadoDato"
            android:textStyle="normal|bold"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:text="Regresar"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/btnx"
                        android:background="@color/colorBack"
                        android:id="@+id/btnRegresar"
                        android:layout_alignBaseline="@+id/btnConfirmar"
                        android:layout_alignBottom="@+id/btnConfirmar"
                        android:onClick="onClickRegresar"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="false" />


                    <ImageButton
                        android:text="Confirmar"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/btncheck"
                        android:background="@color/colorBack"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:onClick="onClickConfirmar"
                        android:id="@+id/btnConfirmar"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:scaleType="fitCenter"
                        android:elevation="0dp" />
                </TableRow>
            </TableLayout>

            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="151dp"
                android:layout_marginEnd="151dp"
                android:layout_marginTop="123dp"
                android:id="@+id/progressBar" />
        </RelativeLayout>
    </TableLayout>




</FrameLayout>
